extends ../layouts/common
block content
    //method POST
    h1 Login
    if errors
        each error in errors   
            .alert.alert-danger= error
    form( method="POST")
        .form-group.d-flex.flex-column.bd-highlight.mb-3
            label(for="email") Email
            input#email(name="email",type="text",value=values ? values.email : "") 

        .form-group.d-flex.flex-column.bd-highlight.mb-3
            label(for="password") Password
            input#password(name="password",type="password", value=values ? values.password : "")
        button.btn.btn-info Login