extends ../layouts/common
block content
  // method GET
  
  h1 User list
  a.btn.btn-primary.d-inline(href="users/create") CLICK here to Create User
  a.btn.btn-primary.d-inline.ml-3(href="products") CLICK here to Views Product
  .d-flex.align-items-center.mt-3
    form.d-flex.ml-auto(action="users/search" method="GET")
      input(type="text" name ="q")
      button.d-flex(type="button" class="btn btn-info ml-1") Search
  table.table
    tr
      th Name
      th Phone
      th Email
      th Views

    each user in users
      tr
        td
          img(src= user.avatar, width=64)
        td= user.name
        td= user.phone
        td= user.email
        td
          a.btn.btn-light(href="/users/" + user.id) Views
